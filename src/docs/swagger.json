{
  "openapi": "3.0.0",
  "info": {
    "title": "API CanchaYa",
    "version": "1.0.0",
    "description": "Documentaci칩n de la API para gesti칩n de reservas y usuarios"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "paths": {
    "/usuarios/registro": {
      "post": {
        "summary": "Registrar usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nombre": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "rol": { "type": "string", "enum": ["usuario", "admin"] }
                },
                "required": ["nombre", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario creado"
          },
          "400": {
            "description": "Error en la petici칩n"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login de usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token generado"
          },
          "401": {
            "description": "Credenciales inv치lidas"
          }
        }
      }
    }
  }
}
