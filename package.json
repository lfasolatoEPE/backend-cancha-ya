{
  "name": "backend-cancha-ya",
  "version": "1.0.0",
  "description": "Backend para el sistema CanchaYa",
  "main": "dist/index.js",
  "scripts": {
    "generate-swagger": "ts-node scripts/generateSwagger.ts",
    "build": "tsc",
    "start": "npm run generate-swagger && node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "seed:reset": "npx ts-node src/scripts/reset-seed.ts",
    "worker:notifs": "node dist/modules/notifs/worker.js",
    "dev:worker": "ts-node src/modules/notifs/worker.ts",
    "dev:both": "concurrently -k -n API,WORKER \"npm:dev\" \"npm:dev:worker\"",
    "seed:notifs": "ts-node scripts/seed-notifs.ts",
    "seed:users": "ts-node -r dotenv/config src/scripts/seed-users.ts"
  },
  "keywords": [],
  "author": "Lucas Fasolato",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.58.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.1",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.2",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.25",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.0.4",
    "@types/nodemailer": "^7.0.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.0",
    "jest": "^30.0.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
