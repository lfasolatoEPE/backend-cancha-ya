{
  "/disponibilidades": {
    "get": {
      "summary": "Listar disponibilidades de jugadores",
      "tags": ["Disponibilidad de Jugadores"],
      "security": [{ "bearerAuth": [] }],
      "responses": {
        "200": { "description": "Lista de disponibilidades" }
      }
    },
    "post": {
      "summary": "Crear disponibilidad de jugador",
      "tags": ["Disponibilidad de Jugadores"],
      "security": [{ "bearerAuth": [] }],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "fechaDesde": { "type": "string", "format": "date" },
                "fechaHasta": { "type": "string", "format": "date" },
                "horaDesde": { "type": "string", "example": "18:00" },
                "horaHasta": { "type": "string", "example": "20:00" },
                "clubesIds": {
                  "type": "array",
                  "items": { "type": "string", "format": "uuid" }
                }
              },
              "required": ["fechaDesde", "fechaHasta", "horaDesde", "horaHasta", "clubesIds"]
            }
          }
        }
      },
      "responses": {
        "201": { "description": "Disponibilidad creada" }
      }
    }
  },
  "/disponibilidades/{id}": {
    "delete": {
      "summary": "Eliminar disponibilidad de jugador",
      "tags": ["Disponibilidad de Jugadores"],
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "string", "format": "uuid" }
        }
      ],
      "responses": {
        "200": { "description": "Disponibilidad eliminada" }
      }
    }
  }
}
