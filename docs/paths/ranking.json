{
  "/ranking": {
    "get": {
      "summary": "Ranking general de jugadores",
      "tags": ["Ranking"],
      "security": [{ "bearerAuth": [] }],
      "responses": {
        "200": {
          "description": "Lista ordenada de jugadores por ranking",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "usuarioId": { "type": "string" },
                    "nombre": { "type": "string" },
                    "apellido": { "type": "string" },
                    "ranking": { "type": "number" },
                    "activo": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    }
  },

  "/ranking/usuario/{usuarioId}": {
    "get": {
      "summary": "Ver perfil competitivo de un usuario",
      "tags": ["Ranking"],
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "in": "path",
          "name": "usuarioId",
          "required": true,
          "schema": { "type": "string" }
        }
      ],
      "responses": {
        "200": {
          "description": "Perfil competitivo del usuario",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "usuarioId": { "type": "string" },
                  "nombre": { "type": "string" },
                  "apellido": { "type": "string" },
                  "ranking": { "type": "number" },
                  "activo": { "type": "boolean" }
                }
              }
            }
          }
        }
      }
    }
  }
}
