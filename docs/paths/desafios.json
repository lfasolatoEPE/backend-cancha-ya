{
  "/desafios": {
    "post": {
      "summary": "Crear desafío",
      "tags": ["Desafíos"],
      "security": [{ "bearerAuth": [] }],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "reservaId": { "type": "string" },
                "deporteId": { "type": "string" },
                "jugadoresCreadorIds": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "invitadosDesafiadosIds": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "required": ["reservaId", "deporteId", "invitadosDesafiadosIds"]
            }
          }
        }
      },
      "responses": {
        "201": { "description": "Desafío creado" }
      }
    },
    "get": {
      "summary": "Listar desafíos",
      "tags": ["Desafíos"],
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        { "in": "query", "name": "estado", "schema": { "type": "string" } },
        { "in": "query", "name": "deporteId", "schema": { "type": "string" } },
        { "in": "query", "name": "equipoId", "schema": { "type": "string" } },
        { "in": "query", "name": "jugadorId", "schema": { "type": "string" } }
      ],
      "responses": {
        "200": { "description": "Lista de desafíos" }
      }
    }
  },
  "/desafios/{id}/aceptar": {
    "patch": {
      "summary": "Aceptar desafío",
      "tags": ["Desafíos"],
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "schema": { "type": "string" }
        }
      ],
      "responses": {
        "200": { "description": "Desafío aceptado" }
      }
    }
  },
  "/desafios/{id}/rechazar": {
    "patch": {
      "summary": "Rechazar desafío",
      "tags": ["Desafíos"],
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "schema": { "type": "string" }
        }
      ],
      "responses": {
        "200": { "description": "Desafío rechazado" }
      }
    }
  },
  "/desafios/{id}/agregar-jugadores": {
    "patch": {
      "summary": "Agregar jugadores a un desafío",
      "tags": ["Desafíos"],
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "schema": { "type": "string" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "lado": {
                  "type": "string",
                  "enum": ["creador", "desafiado"]
                },
                "jugadoresIds": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "required": ["lado", "jugadoresIds"]
            }
          }
        }
      },
      "responses": {
        "200": { "description": "Jugadores agregados" }
      }
    }
  },
  "/desafios/{id}/finalizar": {
    "patch": {
      "summary": "Finalizar desafío",
      "tags": ["Desafíos"],
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "schema": { "type": "string" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "resultado": {
                  "type": "string",
                  "example": "3-2"
                }
              },
              "required": ["resultado"]
            }
          }
        }
      },
      "responses": {
        "200": { "description": "Desafío finalizado" }
      }
    }
  }
}
