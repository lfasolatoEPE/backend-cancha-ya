{
  "/perfil-competitivo": {
    "get": {
      "summary": "Obtener mi perfil competitivo",
      "tags": ["Perfil competitivo"],
      "security": [{ "bearerAuth": [] }],
      "responses": {
        "200": { "description": "Perfil competitivo" }
      }
    },
    "patch": {
      "summary": "Actualizar mi perfil competitivo",
      "tags": ["Perfil competitivo"],
      "security": [{ "bearerAuth": [] }],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "activo": { "type": "boolean" }
              }
            }
          }
        }
      },
      "responses": {
        "200": { "description": "Perfil actualizado" }
      }
    }
  }
}
