      "responses": {
        "200": {
          "description": "Top usuarios",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "usuario": { "type": "string" },
                    "cantidad": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "/api/reportes/ocupacion-horarios": {
    "get": {
      "tags": ["Reportes"],
      "summary": "Obtener ocupaci칩n por horario",
      "responses": {
        "200": {
          "description": "Ocupaci칩n por hora",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "hora": { "type": "string" },
                    "cantidad": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    }
